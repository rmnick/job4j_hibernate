<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.url">jdbc:hsqldb:mem:parking;sql.enforce_size=false</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="show_sql">true</property>
        <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping resource="ru/job4j/service/entities/BodyCar.hbm.xml"/>
        <mapping resource="ru/job4j/service/entities/Car.hbm.xml"/>
        <mapping resource="ru/job4j/service/entities/Engine.hbm.xml"/>
        <mapping resource="ru/job4j/service/entities/Transmission.hbm.xml"/>
        <mapping resource="ru/job4j/service/entities/Person.hbm.xml"/>
        <mapping resource="ru/job4j/service/entities/Model.hbm.xml"/>
        <mapping resource="ru/job4j/service/entities/Brand.hbm.xml"/>
        <mapping resource="ru/job4j/service/entities/Advertisement.hbm.xml"/>
    </session-factory>
</hibernate-configuration>